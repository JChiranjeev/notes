<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_new_note_toolbar"
        app:autoSizeTextType="uniform"
        android:text="@string/new_note"
        android:textSize="32sp"
        style="@style/FontRalewayMedium"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_note_title"
        app:layout_constraintTop_toBottomOf="@id/tv_new_note_toolbar"
        android:layout_margin="8dp"
        android:textSize="20sp"
        style="@style/FontRalewayMedium"
        android:inputType="textCapSentences"
        android:textCursorDrawable="@null"
        android:maxLines="1"
        android:ellipsize="end"
        android:imeOptions="actionNext"
        android:hint="Note Title"
        android:padding="16dp"
        android:background="@drawable/bg_edittext"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/et_note_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        android:background="@drawable/bg_edittext"
        android:hint="Note Content"
        android:inputType="textMultiLine"
        android:ellipsize="end"
        android:textCursorDrawable="@null"
        android:id="@+id/et_note_content"
        android:padding="16dp"
        style="@style/FontRalewayRegular"
        android:gravity="top|start"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/fab_save_note"
        app:srcCompat="@drawable/ic_done"
        android:layout_margin="16dp"
        app:tint="@color/colorPrimary"
        app:fabSize="normal"
        android:backgroundTint="@color/contrastPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>