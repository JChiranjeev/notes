<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_new_note_toolbar"
            style="@style/FontSourceSansMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            android:text="@string/new_note"
            android:textSize="32sp"
            app:autoSizeTextType="uniform"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_delete_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:padding="12dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/contrastPrimary"
            app:layout_constraintDimensionRatio="1"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_archive_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:padding="12dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/contrastPrimary"
            app:layout_constraintDimensionRatio="1"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_note_title"
        style="@style/FontSourceSansMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_edittext"
        android:ellipsize="end"
        android:hint="Note Title"
        android:imeOptions="actionNext"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:padding="16dp"
        android:textCursorDrawable="@null"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/ll_toolbar"/>

<!--    <androidx.appcompat.widget.AppCompatEditText-->
<!--        android:id="@+id/et_note_content"-->
<!--        style="@style/FontSourceSansRegular"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="8dp"-->
<!--        android:background="@drawable/bg_edittext"-->
<!--        android:ellipsize="end"-->
<!--        android:gravity="top|start"-->
<!--        android:hint="Note Content"-->
<!--        android:inputType="textCapSentences"-->
<!--        android:padding="16dp"-->
<!--        android:textCursorDrawable="@null"-->
<!--        app:layout_constraintTop_toBottomOf="@id/et_note_title"/>-->

    <io.github.mthli.knife.KnifeText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/et_note_title"
        app:layout_constraintBottom_toTopOf="@id/ll_note_editor_actions"
        style="@style/FontSourceSansRegular"
        android:padding="16dp"
        android:gravity="top|start"
        android:hint="Note Content"
        android:inputType="textCapSentences|textMultiLine"
        android:ellipsize="end"
        android:layout_margin="8dp"
        android:background="@drawable/bg_edittext"
        android:id="@+id/kt_note_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_note_editor_actions"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:scrollbars="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:background="@color/transparent"
                android:id="@+id/ib_format_bold"
                android:src="@drawable/ic_bold"
                android:layout_gravity="center_vertical"
                android:tint="@color/contrastPrimary"
                app:layout_constraintDimensionRatio="1"/>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_save_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/contrastPrimary"
            android:layout_gravity="center_vertical"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/colorPrimary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>