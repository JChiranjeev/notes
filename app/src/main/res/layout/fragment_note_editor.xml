<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_new_note_toolbar"
            style="@style/FontSourceSansMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            android:text="@string/new_note"
            android:textSize="32sp"
            app:autoSizeTextType="uniform"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_delete_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:padding="12dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/contrastPrimary"
            app:layout_constraintDimensionRatio="1"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_archive_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:padding="12dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/contrastPrimary"
            app:layout_constraintDimensionRatio="1"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_note_title"
        style="@style/FontSourceSansMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_edittext"
        android:ellipsize="end"
        android:hint="Note Title"
        android:imeOptions="actionNext"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:padding="16dp"
        android:textCursorDrawable="@null"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/ll_toolbar"/>

    <org.wordpress.aztec.AztecText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="textMultiLine|textCapSentences"
        android:imeOptions="flagNoExtractUi"
        android:id="@+id/at_note_content"
        app:quoteBackground="@color/md_grey_300"
        android:hint="Note Content"
        android:gravity="top|start"
        app:textColor="@color/textColorPrimary"
        android:textCursorDrawable="@null"
        app:layout_constraintTop_toBottomOf="@id/et_note_title"
        app:layout_constraintBottom_toTopOf="@id/ll_note_editor_actions"
        android:layout_margin="8dp"
        android:padding="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_note_editor_actions"
        app:layout_constraintBottom_toBottomOf="parent">

        <org.wordpress.aztec.toolbar.AztecToolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:toolbarBorderColor="@color/transparent"
            app:toolbarBackgroundColor="@color/transparent"
            app:toolbarIconNormalColor="@color/contrastPrimary"
            app:mediaToolbarAvailable="false"
            android:id="@+id/at_toolbar"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@id/ll_note_editor_actions"
            android:layout_margin="8dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_save_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/contrastPrimary"
            android:layout_gravity="center_vertical"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/colorPrimary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>