<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_note_preview_title"
            android:text="Note Title"
            android:padding="4dp"
            android:textSize="16sp"
            style="@style/FontSourceSansBold"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_note_preview_content"
            android:text="Note Content Hello World\nHelloWorld"
            android:padding="4dp"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/tv_note_preview_modified"
            style="@style/FontSourceSansSemiBold"
            app:lineHeight="20sp"
            android:maxLines="5"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_note_preview_title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_todo_preview_content"
            android:clickable="false"
            android:focusable="false"
            android:padding="2dp"
            app:layout_constraintBottom_toTopOf="@id/tv_note_preview_modified"
            app:layout_constraintTop_toBottomOf="@id/tv_note_preview_title"
            style="@style/FontSourceSansSemiBold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:translationZ="2dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="@id/rv_todo_preview_content"
            app:layout_constraintTop_toTopOf="@id/rv_todo_preview_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_note_preview_modified"
            android:text="1/1/2000 00:00"
            android:padding="4dp"
            style="@style/FontSourceSansRegular"
            android:maxLines="5"
            android:ellipsize="end"
            android:textSize="12sp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>