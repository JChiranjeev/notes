<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_grey_200</item>
    </style>

    <style name="FontRalewayBold">
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="FontRalewayLight">
        <item name="fontFamily">@font/raleway_light</item>
    </style>

    <style name="FontRalewayMedium">
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <style name="FontRalewayRegular">
        <item name="fontFamily">@font/raleway_regular</item>
    </style>

    <style name="FontRalewaySemiBold">
        <item name="fontFamily">@font/raleway_semi_bold</item>
    </style>

</resources>
